<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="用户注册"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_alignRight="@+id/title"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="13.5sp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/ed_update_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="11"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/tv_second_light_gray"
        android:textCursorDrawable="@drawable/shp_cursor"
        android:hint="用户名"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:textSize="13.5sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="密码"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="13.5sp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="11"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/tv_second_light_gray"
        android:textCursorDrawable="@drawable/shp_cursor"
        android:hint="密码"
        android:textSize="13.5sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="昵称："
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="13.5sp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="11"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/tv_second_light_gray"
        android:textCursorDrawable="@drawable/shp_cursor"
        android:hint="昵称"
        android:textSize="13.5sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="电话："
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="13.5sp"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="11"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/tv_second_light_gray"
        android:textCursorDrawable="@drawable/shp_cursor"
        android:hint="电话"
        android:textSize="13.5sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="性别："
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="13.5sp"
        android:layout_marginTop="30dp"
        />
    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center"
        >
        <RadioButton
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="男"
            />
        <RadioButton
            android:id="@+id/woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            />
    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="是否允许登录："
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="13.5sp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        />
    <RadioGroup
        android:id="@+id/isLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_gravity="center"
        android:visibility="gone"
        >
        <RadioButton
            android:id="@+id/allow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="允许登录"
            />
        <RadioButton
            android:id="@+id/disAllow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不允许登录"
            />
    </RadioGroup>


    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/login_line"
        android:layout_alignStart="@+id/login_line"
        android:layout_alignLeft="@+id/login_line"
        android:layout_alignEnd="@+id/login_line"
        android:layout_alignRight="@+id/login_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shp_login"
        android:gravity="center"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="13sp" />

</LinearLayout>