<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="用户添加"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_alignRight="@+id/title"
        android:background="@color/gray" />

    <EditText
        android:id="@+id/ed_update_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:background="@null"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:drawablePadding="13dp"
        android:hint="请输入账号"
        android:maxLength="11"
        android:textColor="@color/textColor"
        android:textColorHint="@color/tv_second_light_gray"
        android:textCursorDrawable="@drawable/shp_cursor"
        android:textSize="13.5sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ed_update_account"
        android:layout_alignStart="@+id/ed_update_account"
        android:layout_alignLeft="@+id/ed_update_account"
        android:layout_alignEnd="@+id/ed_update_account"
        android:layout_alignRight="@+id/ed_update_account"
        android:layout_marginTop="8dp"
        android:background="@color/gray" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/ed_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_update_account"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@null"
        android:drawablePadding="13dp"
        android:hint="请输入密码"
        android:textColor="@color/textColor"
        android:textColorHint="@color/tv_second_light_gray"
        android:textCursorDrawable="@drawable/shp_cursor"
        android:textSize="13.5sp" />

    <View
        android:id="@+id/login_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ed_pass"
        android:layout_alignStart="@+id/ed_pass"
        android:layout_alignLeft="@+id/ed_pass"
        android:layout_alignEnd="@+id/ed_pass"
        android:layout_alignRight="@+id/ed_pass"
        android:layout_marginTop="8dp"
        android:background="@color/gray" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/login_line"
        android:layout_alignStart="@+id/login_line"
        android:layout_alignLeft="@+id/login_line"
        android:layout_alignEnd="@+id/login_line"
        android:layout_alignRight="@+id/login_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/shp_login"
        android:gravity="center"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>